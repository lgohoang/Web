    <!-- Recent Works -->
    <div class="headline">
        <h2>Ưu điểm vượt trội của lò đốt rác Miraway</h2>
    </div>
    @for (int i = 0; i < ViewBag.NumberRow; i++)
    {
        <div class="row margin-bottom-20">
            @for (int j = i * ViewBag.NumberOfRow; j < ViewBag.NumberOfRow * i + 4; j++)
            {
                if (j < ViewBag.Count)
                {
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnails thumbnail-style thumbnail-kenburn">
                        <div class="thumbnail-img">
                            <div class="overflow-hidden">
                                <a href="@Url.Action("Post", "View", new { @ID = @ViewBag.Solution_Areas[j].ID })">
                                    <img class="img-responsive" src="@ViewBag.Solution_Areas[j].Image" alt="">
                                </a>
                            </div>
                            <a class="btn-more hover-effect" href="@Url.Action("Post", "View", new { @ID = @ViewBag.Solution_Areas[j].ID })">Đọc thêm</a>
                        </div>
                        <div class="caption">
                            <h3><a class="hover-effect" href="@Url.Action("Post", "View", new { @ID = @ViewBag.Solution_Areas[j].ID })"><b>@ViewBag.Solution_Areas[j].Title</b></a></h3>
                            <p>@ViewBag.Solution_Areas[j].Describe</p>
                        </div>
                    </div>
                </div>
                }
                else
                {
                    break;
                }

            }
        </div>
