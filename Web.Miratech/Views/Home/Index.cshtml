@{
    ViewBag.Title = "Home Page";
}
<!--=== Slider ===-->
<div class="ms-layers-template">
    <!-- masterslider -->
    <div class="master-slider ms-skin-black-2 round-skin" id="masterslider">

        @foreach (var sl in ViewBag.SLide)
        {
            if (sl.Video != null)
            {
                if (sl.Image != null)
                { 
            <div class="ms-slide" style="z-index: 10" data-delay="10">
                <img src="~/Plugins/master-slider/masterslider/style/blank.gif" data-src="@((sl.Background != null) ? sl.Background : "Images/slide_background.jpg") " alt="">

                <div class="ms-layer video-box" style="top: 70px; right: 15px; width: 550px; height: 310px;"
                    data-type="video"
                    data-effect="rotate3dright(0,30,0,100,r)"
                    data-duration="1500"
                    data-ease="easeOutQuad">
                    <img class="ms-img-bordered" src="~/Plugins/master-slider/masterslider/style/blank.gif" data-src="@sl.Image" alt="">
                    @*<iframe src="https://www.youtube.com/embed/qY6XLIHaESI" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>*@
                    @Html.Raw(sl.Video)
                </div>

                <h3 class="ms-layer ms-title ms-promo-info color-light" style="left: 10px; top: 50px;"
                    data-effect="bottom(20)"
                    data-duration="2300"
                    data-delay="500"
                    data-ease="easeOutExpo">
                    @sl.Title
                </h3>

                <p class="ms-layer ms-describe ms-promo-sub color-light" style="left: 10px; top: 300px;"
                    data-effect="right(40)"
                    data-duration="2300"
                    data-delay="2300"
                    data-ease="easeOutExpo">
                    @sl.Describe
                </p>
            </div>
                }
                else
                {
            <div class="ms-slide" style="z-index: 10" data-delay="10">
                <img src="~/Plugins/master-slider/masterslider/style/blank.gif" data-src="@((sl.Background != null) ? sl.Background : "Images/slide_background.jpg") " alt="">

                <div class="ms-layer video-box" style="top: 70px; right: 15px; width: 550px; height: 310px;"
                    data-type="video"
                    data-effect="rotate3dright(0,30,0,100,r)"
                    data-duration="1500"
                    data-ease="easeOutQuad">
                    @*<img class="ms-img-bordered" src="~/Plugins/master-slider/masterslider/style/blank.gif" data-src="@sl.Image" alt="">*@
                    @*<iframe src="https://www.youtube.com/embed/qY6XLIHaESI" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>*@
                    @Html.Raw(sl.Video)
                </div>

                <h3 id="resizess" class="ms-layer ms-title ms-promo-info color-light" style="left: 10px; top: 50px;"
                    data-effect="bottom(20)"
                    data-duration="2300"
                    data-delay="1700"
                    data-ease="easeOutExpo">
                    @sl.Title
                </h3>

                <p class="ms-layer ms-describe ms-promo-sub color-light" style="left: 10px; top: 300px;"
                    data-effect="right(40)"
                    data-duration="2300"
                    data-delay="2300"
                    data-ease="easeOutExpo">
                    @sl.Describe
                </p>
            </div>
                }
            }
            else
            {
                if (sl.Image != null)
                {
            <div class="ms-slide" style="z-index: 10" data-delay="6">
                <img src="~/Plugins/master-slider/masterslider/style/blank.gif" data-src="@((sl.Background != null) ? sl.Background : "Images/slide_background.jpg")" alt="">

                <img class="ms-layer" src="~/Plugins/master-slider/masterslider/style/blank.gif" data-src="@sl.Image" alt=""
                    style="top:100px; left: 15px; width: 400px; height: auto;"
                    data-effect="bottom(100)"
                    data-duration="2000"
                    data-ease="easeOutExpo"
                    data-type="image"/>

                <h3 class="ms-layer ms-title ms-promo-info-in color-light" style="left: 450px; top: 100px;"
                    data-effect="right(40)"
                    data-duration="2300"
                    data-delay="1300"
                    data-ease="easeOutExpo">@sl.Title</h3>

                <div class="ms-layer ms-describe ms-promo-sub-image color-light" style="left: 450px; top: 180px"
                    data-effect="bottom(40)"
                    data-duration="2000"
                    data-delay="1300"
                    data-ease="easeOutExpo">
                    @sl.Describe
                </div>

            </div>
                }
                else
                {
            <div class="ms-slide" style="z-index: 10;"
                data-delay="6">
                <img src="~/Plugins/master-slider/masterslider/style/blank.gif" data-src="@((sl.Background != null) ? sl.Background : "Images/slide_background.jpg")" alt="">
                <div class="ms-layer ms-title ms-promo-info-text color-light" style="top: 200px;"
                    data-effect="bottom(40)"
                    data-duration="2000"
                    data-delay="1000"
                    data-ease="easeOutExpo">
                    @sl.Title
                </div>

                <div class="ms-layer ms-describe ms-promo-sub color-light" style="top: 270px;"
                    data-effect="bottom(40)"
                    data-duration="2000"
                    data-delay="1300"
                    data-ease="easeOutExpo">
                    @sl.Describe
                </div>
            </div>
                }
            }
        }
    </div>
</div>


