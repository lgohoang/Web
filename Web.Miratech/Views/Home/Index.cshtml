        <!-- Latest Shots -->
        <div class="col-md-4">
            <div class="headline">
                <h2>Bài viết mới</h2>
            </div>
            <div id="myCarousel" class="carousel slide carousel-v1">
                <div class="carousel-inner">
                    @{

                        var lp = ViewBag.LastedPost;
                        if (lp != null)
                        {
                            <div class="item active">
                                <img class="carousel-image" src="@lp[0].Image" alt="">
